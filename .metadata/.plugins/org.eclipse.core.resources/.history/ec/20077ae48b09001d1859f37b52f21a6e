package com.flipside.api.controller;

import java.io.IOException;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.flipside.api.Entity.User;
import com.flipside.api.service.Service;

@RestController
public class Controller {
      
	  @Autowired
	  Service service;
	  
	  @GetMapping("/getall")
	  public List<User> getAll(){
		  return service.getAll();
	  }
	  
	  @PostMapping("/add")
	  public UserProfile addUser(@RequestParam("id") int id,@RequestParam("name") String name, @RequestParam("profile") MultipartFile profile) {
		  UserProfile user;
		try {
			user = new UserProfile(id,name,profile.getBytes());
			 return service.addUser(user);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		 return null;
	  }
}
