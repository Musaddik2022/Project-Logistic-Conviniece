				actualList.add(sp);
			}
		}
		return result;
	}

	public List<ServiceProvider> getTopPackers() {
		List<ServiceProvider> result = new ArrayList<ServiceProvider>();
		List<ServiceProvider> first = serviceDao.getFirst("packersandmovers"); 
		List<ServiceProvider> second = serviceDao.getSecond("packersandmovers");
		List<ServiceProvider> third = serviceDao.getThird("packersandmovers");
